page {
    height: 100%;
    background-color: #f5f5f9;
}

.list {
    -webkit-box-orient: vertical;
    flex-direction: column;
}

.item-main,.list {
    display: -ms-flexbox;
    display: flex;
    -webkit-box-direction: normal;
}

.item-main {
    -webkit-box-orient: horizontal;
    flex-direction: row;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 29.333vw;
    background-color: #fff;
    padding-left: 4vw;
    padding-right: 4vw;
}

.item-main-cover {
    background: #fff;
    border: 1rpx solid #f5f5f9;
    width: 21.333vw;
    height: 21.333vw;
    padding: .8vw;
    -webkit-box-flex: 0;
    -ms-flex-positive: 0;
    flex-grow: 0;
}

.item-main-info-container {
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    height: 21.333vw;
    width: 40vw;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    margin-left: 2.667vw;
    padding-right: 6.667vw;
}

.item-main-info-title {
    font-family: PingFangSC-Thin;
    font-size: 3.733vw;
    color: #000;
    text-align: left;
    width: 100%;
}

.item-main-info-price {
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    height: 4.8vw;
    font-family: HelveticaNeue-CondensedBold;
    color: #000;
    text-align: center;
}

.item-main-info-price .rmb {
    font-size: 2.933vw;
}

.item-main-info-price .price {
    font-size: 4vw;
    margin-left: .667vw;
}

.item-line {
    background-color: #f1f1f4;
    height: 1rpx;
    width: 100%;
}